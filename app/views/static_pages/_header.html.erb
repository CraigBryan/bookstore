<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">

    <li class="name">
      <h1> <%= link_to 'Bookstore', root_path %></h1>
    </li>

    <li class="toggle-topbar menu-icon">
      <a href="#"></a>
    </li>

  </ul>

  <section class="top-bar-section">
    <ul class="right">

      <% if user_signed_in? %>
        <li>
          <%= link_to 'Sign Out',
                        destroy_user_session_path,
                        data: {method: :delete} %>
        </li>
      <% end %>

      <% if is_admin? %>
        <li>
          <%= link_to 'Add a new Book', new_book_path %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign In', new_user_session_path %>
        </li>
      <% end %>

      <li><%= link_to 'Help', help_path %></li>
      <li><%= link_to 'Cart ( 0 )', '#' %></li>
    </ul>

    <ul id="search_list">
      <li class="has-form">
        <%= form_tag search_path, :method => 'get' do %>
          <div class="search">
            <div class="row">
              <%= text_field_tag :search, params[:search], id: 'search_input',
               placeholder: 'Title, Author, Category' %>
            </div>
          </div>
        <% end %>
      </li>
    </ul>
  </section>
</nav>
