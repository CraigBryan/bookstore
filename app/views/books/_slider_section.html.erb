<h3><%=label%></h3>

<div class="slider-container">
  <% books.each do |book| %>
    <li>
      <%= link_to image_tag("#{book.isbn}.jpg", alt: 'Book Cover', class: "book_cover"), book_path(book) %>
      
      <% if logged_in? %>
        <%= link_to image_tag('edit.png', class: 'table_icon', alt: 'Edit'), edit_book_path(book) %>
        <%= link_to image_tag('delete.png', class: 'table_icon', alt: 'Delete'), book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?"}%>
      <% end %>
    </li>
  <% end %>
</div>