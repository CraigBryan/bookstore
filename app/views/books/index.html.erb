<div class="row">
	<div class="small-12 columns">
		<h1>Here's All of the Available Books for Sale</h1>	
	</div>	

	<div class="small-4 small-centered columns">
		<table>
			<thead>
		    <tr>
		      <th>ISBN</th>
		      <th>Quantity</th>
		      <th>View Book</th>

		      <% if logged_in? %>
		      	<th>Edit Book</th>
		      	<td>Delete Book</td>
		      <% end %>
		    </tr>
		  </thead>

			<!-- Loops through each book and displays them -->
			<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= book.isbn %></td>
						<td><%= book.quantity%></td>
						<td><%= link_to 'Show Book', book_path(book) %></td> <!-- Displays this current instance of the book -->

						<% if logged_in? %>
							<td><%= link_to 'Edit Book', edit_book_path(book) %></td> <!-- Brings you to the edit view for this book instance -->
							<td><%= link_to 'Delete Book', book_path(book), method: :delete, data: {confirm: 'Are you sure you want to delete this book?'} %></td>
						<% end %>
					</tr>
				</tbody>
			<% end %>
		</table>
	<% if logged_in? %>
		<%= link_to 'Add a new book', new_book_path %>
		<%= link_to "Log out", logout_path, method: "delete" %>
	<% end %>
	</div>
</div>