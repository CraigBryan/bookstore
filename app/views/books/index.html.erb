<%= image_tag 'book_cover.jpg', id: 'book_cover', alt: 'Banner Photo of a book' %>
<h1 class='text-center' id="header1">Welcome to the Bookstore!</h1>

<div class="container">
	<div class="row">
		<div class="medium-10 medium-centered columns">
			<%= form_tag search_path, :method => 'get' do %>
				<p>
					<div class="medium-8 columns">
						<%= text_field_tag :search, params[:search], placeholder: 'Title, Author, Category	' %>
					</div>

					<div class='medium-2 columns'>
						<%= submit_tag "Search", :name => nil, class: 'button', id: 'search_button'%>
					</div>
				</p>
			<% end %>
		</div>
	</div>
</div>

<% @categories.each do |label, books| %>
	<div class="slider">
		<%= render partial: "slider_section", locals: {label: label, books: books} %>
	</div>
<% end %>
