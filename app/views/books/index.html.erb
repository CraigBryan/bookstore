<div class="row">
	<div class="medium-4 medium-centered columns">
		<h1>Books for Sale</h1>	
	</div>	

	<div class="medium-4 medium-centered columns">
		<table>
			<thead>
		    <tr>
		      <th>ISBN</th>
		      <th>Quantity</th>
		      <th>View Book</th>

		      <% if logged_in? %>
		      	<th>Edit Book</th>
		      	<td>Delete Book</td>
		      <% end %>
		    </tr>
		  </thead>

			<!-- Loops through each book and displays them -->
			<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= book.isbn %></td>
						<td><%= book.quantity%></td>
						<td><%= link_to 'Show Book', book_path(book) %></td> <!-- Displays this current instance of the book -->

						<% if logged_in? %>
							<td><%= link_to image_tag('edit.png', class: 'table_icon', alt: 'Edit'), edit_book_path(book) %></td>

							<td><%= link_to image_tag('delete.png', class: 'table_icon', alt: 'Delete'), book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?"}%></td>
						<% end %>
					</tr>
				</tbody>
			<% end %>
		</table>
	</div>
</div>