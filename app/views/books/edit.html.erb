
<h1>Editing a book</h1>

<%= form_for :book url: books_path(@book), method: :patch do |f| %>

	<% if @book.errors.any? %> 
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited the article from being saved.</h2>

			<ul>
				<%= @book.errors.full_messages.each do |e| %> 
					<li><% e %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :isbn %><br>
		<%= f.text_field :isbn %>
	</p>

	<p>
		<%= f.label :quantity %><br>
		<%= f.text_field :quantity %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Back to all books', books_path %>
