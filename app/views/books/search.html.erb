<div class="container">
  <div class='row'>
    <h1 class='text-center'>Welcome to the Search page</h1>
    <div class="small-block-grid-2 medium-block-grid-4 large-block-grid-6 columns">
      <% @books.each do |book| %>
          <%= link_to image_tag("#{book.isbn}.jpg", alt: "#{book.title} Cover",
          class: "search_book_cover"), book_path(book) %>
      <% end %>
    </div>
  </div>
</div>
