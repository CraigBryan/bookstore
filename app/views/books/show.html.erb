<div class="container">
	<div class="row">

		<div class="medium-12 columns">
			<h1 id="title" class="text-center"><%= @book.title %></h1>
		</div>

		<div class="medium-3 medium-push-1 columns">
			<%= image_tag "#{@book.isbn}.jpg", alt: 'Book Cover' %>

			<div class="row" id="book_properties">
				<div class="medium-12 columns">

					<p>
						<strong>Author:</strong>
						<%= @book.author %>
					</p>

					<p>
						<strong>Publisher:</strong>
						<%= @book.publisher %>
					</p>

					<p>
						<strong>Category:</strong>
						<%= @book.category %>
					</p>

					<p>
						<strong>ISBN:</strong>
						<%= @book.isbn %>
					</p>

					<p>
						<strong>Quantity Available:</strong>
						<%= @book.quantity %>
					</p>

					<% if is_admin? %>
						<%= link_to 'Edit Book', edit_book_path(@book) %>
						<%= link_to 'Delete Book', book_path(@book), method: :delete, data: { confirm: "Are you sure you want to remove this book?"} %>
					<% end %>

				</div>
			</div>
		</div>

		<div class="medium-7 medium-pull-1 columns">
			<p>
				<strong>Summary:</strong>
				<%= @book.summary %>
			</p>
		</div>
	</div>
